@model IEnumerable<PetsProject.Models.PetRegistration>
@using PetsProject.Models
<head>
    <title>Pet Sitting - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Bootstrap search box or search panel like amazon.com" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Satyendra Kumar Singh" />

    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Main/css/animate.css">

    <link rel="stylesheet" href="~/Main/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Main/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Main/css/magnific-popup.css">


    <link rel="stylesheet" href="~/Main/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Main/css/jquery.timepicker.css">

    <link rel="stylesheet" href="~/Main/css/flaticon.css">
    <link rel="stylesheet" href="~/Main/css/style.css">
    <link href="~/VetRegistration/VetList/VetList.css" rel="stylesheet" />
    <link href="~/Searchbar/css/SearchBar.css" rel="stylesheet" />
</head>
<body>
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">მთავარი <i class="ion-ios-arrow-forward"></i></a></span> <a asp-action="GetPets"><span class="mr-2">ძაღლები <i class="ion-ios-arrow-forward"></i></span></a></p>
                    <h6 class="mb-4 bread">აირჩიე შენთვის სასურველი ძაღლი</h6>
                    <form asp-action="GetPets" method="post" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <input type="text" class="form-control search-slt" name="searchString" placeholder="საძიებო ველი...">
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt"name="searchJishebi">
                                            <option disabled selected>ყველა</option>
                                            @foreach (var yourEnum in Html.GetEnumSelectList<Jishebi>())
                                            {
                                                <option>@yourEnum.Text</option>
                                            }

                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt" name="searchSex">
                                            <option disabled selected>ყველა</option>
                                            @foreach (var item in Enum.GetValues(typeof(PetsProject.Models.Sex)))
                                            {
                                                <option value="@item">@item</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt" name="searchCity">
                                            <option disabled selected>ყველა</option>
                                            @foreach (var item in Enum.GetValues(typeof(PetsProject.Models.City)))
                                            {
                                                <option value="@item">@item</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <button type="submit" class="btn btn-danger wrn-btn">ძიება</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <section class="search-sec">
                        <div class="container">
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <div class="container">
        <div class="row clearfix">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="card product_item">
                        <div class="body">
                            @if (item.PetPhotoUrl == null)
                            {
                                <div class="cp_img">
                                    <img src="/images/VetPhoto/photonotavailable.jpg" alt="Product" class="img-fluid">
                                    <div class="hover">
                                        <a asp-action="PetDetails" asp-route-id="@item.ID"><p style="color:green;">დეტალურად</p></a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="cp_img">
                                    <img style="width:auto;height:auto;" src="@item.PetPhotoUrl" alt="Product" class="img-fluid">
                                    <div class="hover">
                                        <a asp-action="PetDetails" asp-route-id="@item.ID"><p style="color:green;">დეტალურად</p></a>
                                    </div>
                                </div>
                            }
                            <div class="product_details">
                                <p style="color:darkgrey">@item.City</p>
                                <p style="color:darkgrey">@item.PetRegistrationDateTime</p>
                                <h5>@item.Title</h5>
                                <p style="color:green;">@item.Price ლარი</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>




<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


