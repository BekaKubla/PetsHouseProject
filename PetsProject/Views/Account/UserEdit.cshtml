@model PetsProject.Models.UserEdit

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="~/User/UserProfileEdit.css" rel="stylesheet" />
</head>
<div class="container">
    <div class="main-body">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">მთავარი</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a asp-controller="Account" asp-action="UserProfile">პირადი სივრცე</a></li>
                <li class="breadcrumb-item active" aria-current="page">რედაქტირება</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->
        <form method="post" asp-action="UserEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                @if (Model.GenderValue == 0)
                                {
                                    <img src="~/images/avatargirl.png" alt="Admin" class="rounded-circle" width="150">
                                }
                                else
                                {
                                    <img src="~/images/avatarboy.png" alt="Admin" class="rounded-circle" width="150">
                                }
                                <div class="mt-3">
                                    <h4>@User.Identity.Name</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label asp-for="Email" class="control-label"></label>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="Email" class="form-control" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label asp-for="Password" class="control-label"></label>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="Password" class="form-control" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <label asp-for="GenderValue" class="control-label">სქესი</label>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <select class="form-control" asp-for="GenderValue" asp-items="@Html.GetEnumSelectList<PetsProject.Models.AppUser.Gender>()">
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="submit" class="btn btn-primary px-4" value="შენახვა">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


