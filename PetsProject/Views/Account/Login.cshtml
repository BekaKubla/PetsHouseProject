@model PetsProject.Models.Login
<!doctype html>
<html lang="en">
<head>
    <title>ავტორიზაცია</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-6">
                    <div class="login-wrap">
                        <h3 class="mb-4 text-center">ავტორიზაცია</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form method="post" asp-action="Login" class="signup-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <input asp-for="Email" type="text" class="form-control" placeholder="ელ-ფოსტა">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="პაროლი">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex">
                                        <button type="submit" class="btn btn-primary rounded submit p-3">ავტორიზაცია</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="w-100 social-wrap">
                            <p class="mt-4">არ ხარ რეგისტრირებული ? <a asp-controller="Account" asp-action="Register">რეგისტრაცია</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
