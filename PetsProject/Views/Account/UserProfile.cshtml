@model PetsProject.Models.User
<head>
    <link href="~/User/UserProfile.css" rel="stylesheet" />
</head>
<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">მთავარი</a></li>
                <li class="breadcrumb-item active" aria-current="page">პირადი სივრცე</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Vet" asp-action="VetRegistration" target="_blank" style="color:green;">ვეტერინარის რეგისტრაცია</a></span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Account" asp-action="LogOut" style="color:red;">გასვლა</a></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">სახელი</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">ელ-ფოსტა</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">პაროლი</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                ******
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " asp-action="UserEdit" asp-controller="Account">ჩასწორება</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">ჩემი განცხადებები</i></h6>
                                <small>ვეტერინარი <a asp-action="UserProducts" asp-controller="UserProduct">(@Model.VetCount)</a></small>
                                <hr />
                                <small>ძაღლის გასეირნება (0)</small>
                                <hr />
                                <small>დამაკება (0)</small>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4 mb-md-0">
                <h2 class="footer-heading">PetsHouse</h2>
                <p>ვებ სივრცე შინაური ცხოველებისთვის.</p>
                <ul class="ftco-footer-social p-0">
                    <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="fa fa-twitter"></span></a></li>
                    <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><span class="fa fa-facebook"></span></a></li>
                    <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><span class="fa fa-instagram"></span></a></li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-3 pl-lg-5 mb-4 mb-md-0">
                <h2 class="footer-heading">სწრაფი გადასვლა</h2>
                <ul class="list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index" class="py-2 d-block">მთავარი</a></li>
                    <li><a asp-controller="Home" asp-action="Gallery" class="py-2 d-block">ფოტო გალერეა</a></li>
                    <li><a asp-controller="Home" asp-action="Blog" class="py-2 d-block">ბლოგი</a></li>
                    <li><a asp-controller="Home" asp-action="Contact" class="py-2 d-block">კონტაქტი</a></li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-3 mb-4 mb-md-0">
                <h2 class="footer-heading">გაქვს შეკითხვა?</h2>
                <div class="block-23 mb-3">
                    <ul>

                        <li><a href="#"><span class="icon fa fa-phone"></span><span class="text">+995 12 34 56</span></a></li>
                        <li><a href="#"><span class="icon fa fa-paper-plane"></span><span class="text">info@yourdomain.com</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12 text-center">

                <p class="copyright">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib.com</a>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </div>
</footer>

