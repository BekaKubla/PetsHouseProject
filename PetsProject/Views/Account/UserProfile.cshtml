@model PetsProject.Models.User
<head>
    <link href="~/User/UserProfile.css" rel="stylesheet" />
</head>
<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">მთავარი</a></li>
                <li class="breadcrumb-item active" aria-current="page">პირადი სივრცე</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.UserGender == 0)
                            {
                                <img src="~/images/avatargirl.png" alt="Admin" class="rounded-circle" width="150">
                            }
                            else
                            {
                                <img src="~/images/avatarboy.png" alt="Admin" class="rounded-circle" width="150">
                            }
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Vet" asp-action="VetRegistration" target="_blank" style="color:green;">ვეტერინარის რეგისტრაცია</a></span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Pet" asp-action="PetReg" target="_blank" style="color:green;">ყიდვა/გაყიდვა (განცხადების დამატება)</a></span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Vacancy" asp-action="CreateVacancy" target="_blank" style="color:green;">ძაღლის გასეირნება (ვაკანსიის დამატება)</a></span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="#" asp-action="#" target="_blank" style="color:green;">დამაკება (ვაკანსიის დამატება)</a></span>
                        </li>
                    </ul>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <span class="text-secondary"><a asp-controller="Account" asp-action="LogOut" style="color:red;">გასვლა</a></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">სახელი</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">ელ-ფოსტა</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">სქესი</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (Model.UserGender == 0)
                                {
                                    <h6>მდედრობითი</h6>
                                }
                                else
                                {
                                    <h6>მამრობითი</h6>
                                }

                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">პაროლი</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                ******
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " asp-action="UserEdit" asp-controller="Account">ჩასწორება</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">ჩემი განცხადებები</i></h6>
                                <small>ვეტერინარი <a asp-action="VetProducts" asp-controller="UserProduct">(@Model.VetCount)</a></small>
                                <hr />
                                <small>ცხოველები <a asp-action="PetProducts" asp-controller="UserProduct">(@Model.PetCount)</a></small>
                                <hr />
                                <small>ძაღლის გასეირნება <a asp-action="Vacancys" asp-controller="UserProduct">(@Model.VacancyCount)</a></small>
                                <hr />
                                <small>დამაკება(0)</small>
                                <hr />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


<script src="~/Main/js/jquery.min.js"></script>
<script src="~/Main/js/jquery-migrate-3.0.1.min.js"></script>
<script src="~/Main/js/popper.min.js"></script>
<script src="~/Main/js/bootstrap.min.js"></script>
<script src="~/Main/js/jquery.easing.1.3.js"></script>
<script src="~/Main/js/jquery.waypoints.min.js"></script>
<script src="~/Main/js/jquery.stellar.min.js"></script>
<script src="~/Main/js/jquery.animateNumber.min.js"></script>
<script src="~/Main/js/bootstrap-datepicker.js"></script>
<script src="~/Main/js/jquery.timepicker.min.js"></script>
<script src="~/Main/js/owl.carousel.min.js"></script>
<script src="~/Main/js/jquery.magnific-popup.min.js"></script>
<script src="~/Main/js/scrollax.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
<script src="~/Main/js/google-map.js"></script>
<script src="~/Main/js/main.js"></script>